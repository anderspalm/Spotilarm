<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <gradient android:angle="270" android:endColor="@color/blue2" android:startColor="@color/white" />
            <corners android:radius="20dp" />
            <size android:width="37dp" android:height="37dp" />
        </shape>
        <color android:color="@color/white"/>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <gradient android:angle="270" android:endColor="@color/grey" android:startColor="@color/white" />
            <corners android:radius="20dp" />
            <size android:width="37dp" android:height="37dp" />
        </shape>

        <color android:color="@color/white"/>
    </item>
</selector>